<Window x:Name="MainForm" x:Class="WPF_Multipack_Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Multipack Launcher" Height="480" Width="860" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None" Loaded="MainForm_Loaded" Icon="Resources/WOT.ico">
    <Window.Background>
        <ImageBrush ImageSource="Resources/back_1.jpg"/>
    </Window.Background>
    <Grid HorizontalAlignment="Left" Width="860" Height="480" VerticalAlignment="Bottom">
        <Grid.RowDefinitions>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="351*"/>
            <RowDefinition Height="53*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="343*"/>
            <ColumnDefinition Width="87*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.ColumnSpan="2" Content="0.0.0 #0" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Foreground="#FFF37B10" FontFamily="Sochi2014" FontSize="14" Height="27" Width="61"/>
        <Label x:Name="lCaption" Grid.ColumnSpan="2" Content="Loading..." HorizontalAlignment="Left" Margin="189,-2,0,0" VerticalAlignment="Top" Foreground="#FFF37B10" FontFamily="Sochi2014" FontWeight="Bold" FontSize="16"/>
        <Image x:Name="iSettings" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="32" Margin="10,0,0,10" Grid.Row="3" VerticalAlignment="Bottom" Width="32" Source="Resources/settings.png" Cursor="Hand"/>
        <Image x:Name="iFeedback" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="32" Margin="50,0,0,10" Grid.Row="3" VerticalAlignment="Bottom" Width="32" Source="Resources/feedback.png" Cursor="Hand"/>
        <Button Content="Button" Grid.Column="2" HorizontalAlignment="Right" Margin="0,72,10,0" Grid.Row="2" VerticalAlignment="Top" Width="150"/>
        <Button Content="Button" Grid.Column="2" HorizontalAlignment="Right" Margin="0,137,10,0" Grid.Row="2" VerticalAlignment="Top" Width="150"/>
        <Button Content="Exit" Grid.Column="2" HorizontalAlignment="Right" Margin="0,296,10,0" Grid.Row="2" VerticalAlignment="Top" Width="150" Click="Button_Click_1"/>
        <Button Content="Button" Grid.Column="2" HorizontalAlignment="Left" Margin="14,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="150"/>
        <TextBlock Grid.Column="2" Grid.Row="4">
            <Hyperlink NavigateUri="http://ai-rus.com" RequestNavigate="Hyperlink_RequestNavigate" Foreground="#FFF37B10">Developed by Andrey Helldar</Hyperlink>
        </TextBlock>
    </Grid>
</Window>