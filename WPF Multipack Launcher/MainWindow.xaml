<Window x:Name="MainForm" x:Class="WPF_Multipack_Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Multipack Launcher" Height="480" Width="860" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None" Loaded="MainForm_Loaded" Icon="Resources/WOT.ico">
    <Window.Background>
        <ImageBrush ImageSource="Resources/back_1.jpg"/>
    </Window.Background>
    <Grid HorizontalAlignment="Left" Width="860" Height="480" VerticalAlignment="Bottom">
        <Grid.RowDefinitions>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="320*"/>
            <RowDefinition Height="53*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lMultipackVersion" Grid.ColumnSpan="2" Content="0.0.0 #0" HorizontalAlignment="Left" Margin="5,0,0,0" VerticalAlignment="Top" Foreground="#FFF37B10" FontFamily="Sochi2014" FontSize="14" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="27" Width="61"/>
        <Label x:Name="lCaption" Grid.ColumnSpan="2" Content="Loading..." HorizontalAlignment="Left" Margin="189,-2,0,0" VerticalAlignment="Top" Foreground="#FFF37B10" FontFamily="Sochi2014" FontWeight="Bold" FontSize="16" Height="29" Width="68"/>
        <Image x:Name="iFeedback" HorizontalAlignment="Left" Height="32" Margin="45,0,0,8" Grid.Row="4" VerticalAlignment="Bottom" Width="32" Source="Resources/feedback.png" Cursor="Hand" Grid.Column="2"/>
        <Button Content="Launcher" Grid.Column="1" HorizontalAlignment="Right" Margin="0,10,218,0" Grid.Row="4" VerticalAlignment="Top" Width="105"/>
        <Button Content="Update" Grid.Column="1" HorizontalAlignment="Right" Margin="0,10,115,0" Grid.Row="4" VerticalAlignment="Top" Width="98"/>
        <Button x:Name="bExit" Content="Exit" Grid.Column="2" HorizontalAlignment="Right" Margin="0,0,10,10" Grid.Row="4" VerticalAlignment="Bottom" Width="102" Click="Button_Click_1"/>
        <Button Content="Play" Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="4" VerticalAlignment="Top" Width="91"/>
        <TextBlock Grid.Column="2" Grid.Row="4" Margin="82,19,184,16">
            <Hyperlink NavigateUri="http://ai-rus.com" RequestNavigate="Hyperlink_RequestNavigate" Foreground="#FFF37B10">Developed by Andrey Helldar</Hyperlink>
        </TextBlock>
        <Button Content="Settings" Grid.Column="2" HorizontalAlignment="Left" Margin="266,8,0,0" Grid.Row="4" VerticalAlignment="Top" Width="47"/>
        <Button Content="Optimize" Grid.Column="1" HorizontalAlignment="Left" Margin="320,10,0,0" Grid.Row="4" VerticalAlignment="Top" Width="100"/>
        <Label x:Name="lStatusUpdates" Grid.ColumnSpan="3" Content="Loading status..." HorizontalAlignment="Center" Margin="10,3,10,0" Grid.Row="1" VerticalAlignment="Top" Width="840" FontSize="18" Height="33"/>
        <Label x:Name="lLauncherVersion" Content="0.0.0 #0" HorizontalAlignment="Right" Margin="0,0,100,0" VerticalAlignment="Top" Grid.RowSpan="2" Grid.Column="2" Height="28" Width="61"/>
        <Label Grid.ColumnSpan="2" Content="PROTanks: Video" HorizontalAlignment="Left" Margin="20,0,0,5" Grid.Row="2" VerticalAlignment="Top"/>
        <Label Content="Wargaming.net: News" Grid.Column="2" HorizontalAlignment="Left" Margin="20,0,0,5" Grid.Row="2" VerticalAlignment="Top"/>
        <Label Grid.ColumnSpan="2" Content="All videos" HorizontalAlignment="Right" Margin="0,0,20,5" Grid.Row="2" VerticalAlignment="Bottom"/>
        <Label Content="All news" Grid.Column="2" HorizontalAlignment="Right" Margin="0,0,20,5" Grid.Row="2" VerticalAlignment="Bottom"/>
    </Grid>
</Window>