<Window x:Name="WarApiOpenID1" x:Class="_Hell_WPF_Multipack_Launcher.WarApiOpenID"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wargaming OpenID" WindowStartupLocation="CenterScreen" WindowState="Maximized" Icon="Resources/WOT.ico" HorizontalAlignment="Center" VerticalAlignment="Center" Loaded="WarApiOpenID1_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <WebBrowser x:Name="WB" Margin="0" LoadCompleted="WB_LoadCompleted" Navigated="WB_Navigated" Navigating="WB_Navigating" />
        <Popup
              AllowsTransparency="True"
              Placement="Center"
              Width="{Binding ActualWidth,
                              ElementName=WB,
                              Mode=OneWay}"
              Height="{Binding ActualHeight, 
                               ElementName=WB,
                               Mode=OneWay}"
              PlacementTarget="{Binding ElementName=WB}"
              Opacity="1"
              Margin="3">
            <TextBlock Text="Loading ..." FontSize="48"/>
        </Popup>
    </Grid>
</Window>
