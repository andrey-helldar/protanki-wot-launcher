<Page x:Class="_Hell_WPF_Multipack_Launcher.UserProfile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="UserProfile" Width="538" Height="600" Background="#FFC1C1C1">

    <Grid Background="#FFC39494">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="tbUpHello" HorizontalAlignment="Left" Margin="10,10,0,5" TextWrapping="Wrap">
                    <Run>Привет, </Run>
                    <Run FontSize="14" FontWeight="Bold" x:Name="runPlayer">Гость</Run>
                    <Run>!</Run>
        </TextBlock>
        <TextBlock x:Name="tbUpClan" HorizontalAlignment="Left" Margin="10,5,0,5" TextWrapping="Wrap" Grid.Row="1">
                    <Run>Ух ты! Ты состоишь в клане </Run>
                    <Run FontSize="14" FontWeight="Bold">___</Run>
            <Run>вот уже </Run>
            <Run FontWeight="Bold">__</Run>
            <Run> дней!</Run>
        </TextBlock>
        <Button Content="Премиум" HorizontalAlignment="Right" Margin="0,5,10,5" Grid.RowSpan="2" Width="113"/>
        <Button Content="Золота: 500" HorizontalAlignment="Left" Margin="10,10,0,20" Grid.Row="2" VerticalAlignment="Top" Width="150"/>
        <Button Content="Кредитов: 500" Margin="194,10,194,20" Grid.Row="2" VerticalAlignment="Top" Width="150"/>
        <Button Content="Свободного опыта: 950" HorizontalAlignment="Right" Margin="0,10,10,20" Grid.Row="2" VerticalAlignment="Top" Width="150"/>
        <Button Content="Процент побед: 48,71%" HorizontalAlignment="Left" Margin="10,20,0,0" Grid.Row="3" VerticalAlignment="Top" Width="70" Height="70" UseLayoutRounding="False" TextOptions.TextFormattingMode="Display" FontWeight="Bold"/>
        <Button Content="Количество боев 4136" HorizontalAlignment="Left" Margin="100,20,0,0" Grid.Row="3" VerticalAlignment="Top" Width="70" Height="70" FontWeight="Bold"/>
        <Button Content="Личный рейтинг 3868" Margin="194,30,194,0" Grid.Row="3" VerticalAlignment="Top" Width="150" Height="150" FontWeight="Bold"/>
        <Button Content="Средний опыт за бой 305" HorizontalAlignment="Right" Margin="0,20,100,0" Grid.Row="3" VerticalAlignment="Top" Width="70" Height="70" FontWeight="Bold"/>
        <Button Content="Средний нанесенный урон за бой 452" HorizontalAlignment="Right" Margin="0,20,10,0" Grid.Row="3" VerticalAlignment="Top" Width="70" Height="70" FontWeight="Bold"/>
        <Button Content="Закрыть" HorizontalAlignment="Right" Margin="0,0,10,10" Grid.Row="3" VerticalAlignment="Bottom" Padding="20,5" Click="Button_Click"/>
    </Grid>
</Page>
