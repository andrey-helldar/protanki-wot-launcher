<Page x:Class="_Hell_WPF_Multipack_Launcher.UserProfile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="UserProfile" Width="538" Height="600" Background="#FFC1C1C1">

    <Grid Background="#FFC39494">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="84"/>
            <RowDefinition Height="465"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="tbUpHello" HorizontalAlignment="Left" Margin="10,10,0,58" TextWrapping="Wrap">
                    <Run>Привет, </Run>
                    <Run FontSize="14" FontWeight="Bold" x:Name="PlayerName">Гость</Run>
                    <Run>!</Run>
        </TextBlock>
        <TextBlock x:Name="tbUpClan" Margin="10,39,0,8" TextWrapping="Wrap" HorizontalAlignment="Left">
                    <Run>Ты состоишь в клане </Run>
                    <Run FontSize="14" FontWeight="Bold" x:Name="PlayerClan">___</Run>
            <Run>вот уже </Run>
            <Run FontWeight="Bold" x:Name="PlayerClanDays">__</Run>
            <Run> дней!</Run>
        </TextBlock>
        <Button x:Name="prem" Content="Премиум" HorizontalAlignment="Right" Margin="0,5,10,8" Width="113"/>
        <Button Content="Закрыть" HorizontalAlignment="Right" Margin="0,0,10,10" Grid.Row="2" VerticalAlignment="Bottom" Padding="20,5" Click="Button_Click" Height="30" Width="89"/>
        <TabControl Margin="10,0,10,10" Grid.Row="1">
            <TabItem Header="Персональная информация">
                <Grid Background="#FFE5E5E5">
                    <TextBlock HorizontalAlignment="Left" Margin="62,61,0,0" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Center"><Run Text="Всего боев:"/><LineBreak/><Run x:Name="Batles" Text="0"/><LineBreak/><LineBreak/><Run Text="Всего побед:"/><LineBreak/><Run x:Name="Wins" Text="0"/><LineBreak/><LineBreak/><Run Text="Всего Поражений:"/><LineBreak/><Run x:Name="Loss" Text="0"/><LineBreak/><LineBreak/><Run Text="Процент побед"/><LineBreak/><Run x:Name="WinsPercent" Text="0"/><Run Text="%"/><LineBreak/><Run Text="Процент поражений"/><LineBreak/><Run x:Name="LossPercent" Text="0"/><Run Text="%"/><LineBreak/><Run Text="Процент ничьих"/><LineBreak/><Run x:Name="WhoPercent" Text="0"/><Run Text="%"/><LineBreak/><LineBreak/><Run Text="Средний опыт за бой:"/><LineBreak/><Run x:Name="AvgXP" Text="0"/></TextBlock>
                    <Button x:Name="rating" Content="Личный рейтинг 3868" Margin="337,61,10,0" VerticalAlignment="Top" Height="150" FontWeight="Bold"/>
                    <Button x:Name="credit" Content="Кредитов: 500" Margin="224,7,108,0" VerticalAlignment="Top" Height="22"/>
                    <Button x:Name="opit" Content="Свободного опыта: 950" HorizontalAlignment="Right" Margin="0,34,76,0" VerticalAlignment="Top" Width="208" Height="22"/>
                    <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="32" Width="72"><Run Text="Золота:"/><Run Text=" "/><Run x:Name="PlayerGold" FontWeight="Bold" Text="0"/></TextBlock>
                </Grid>
            </TabItem>
            <TabItem Header="Клан">
                <Grid Background="#FFE5E5E5">
                    <TabControl Margin="10">
                        <TabItem Header="Общая информация">
                            <Grid Background="#FFE5E5E5">
                                <TextBlock x:Name="ClanFullname" HorizontalAlignment="Left" Margin="16,15,0,0" TextWrapping="Wrap" Text="Полное название: " VerticalAlignment="Top"/>
                                <TextBlock x:Name="ClanAbbr" HorizontalAlignment="Left" Margin="20,45,0,0" TextWrapping="Wrap" Text="Сокращенное название: " VerticalAlignment="Top"/>
                                <GroupBox Header="Список бойцов клана:" HorizontalAlignment="Left" Margin="30,114,0,0" VerticalAlignment="Top" Height="238" Width="438">
                                    <ListBox x:Name="ClanMembers"/>
                                </GroupBox>
                                <TextBlock x:Name="ClanCount" HorizontalAlignment="Left" Margin="24,76,0,0" TextWrapping="Wrap" Text="Всего бойцов: " VerticalAlignment="Top"/>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Список боев">
                            <Grid Background="#FFE5E5E5">
                                <ListBox HorizontalAlignment="Left" Height="100" Margin="151,108,0,0" VerticalAlignment="Top" Width="100"/>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Список владений">
                            <Grid HorizontalAlignment="Left" Height="372" VerticalAlignment="Top" Width="478">
                                <ListBox HorizontalAlignment="Left" Height="100" Margin="161,86,0,0" VerticalAlignment="Top" Width="100"/>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
