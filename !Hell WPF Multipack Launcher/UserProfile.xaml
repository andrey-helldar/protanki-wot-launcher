<Page x:Class="_Hell_WPF_Multipack_Launcher.UserProfile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="UserProfile" Width="538" Height="600" Background="#FFC1C1C1">

    <Grid Background="#FFC39494">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90*"/>
            <ColumnDefinition Width="93*"/>
            <ColumnDefinition Width="177*"/>
            <ColumnDefinition Width="85*"/>
            <ColumnDefinition Width="93*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="36"/>
            <RowDefinition Height="46"/>
            <RowDefinition Height="39"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="428*"/>
            <RowDefinition Height="51*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="tbUpHello" HorizontalAlignment="Left" Margin="10,10,0,10" TextWrapping="Wrap" Grid.ColumnSpan="2">
                    <Run>Привет, </Run>
                    <Run FontSize="14" FontWeight="Bold" x:Name="PlayerName">Гость</Run>
                    <Run>!</Run>
        </TextBlock>
        <TextBlock x:Name="tbUpClan" Margin="10,3,0,6" TextWrapping="Wrap" Grid.ColumnSpan="3" Grid.Row="1" HorizontalAlignment="Left">
                    <Run>Ты состоишь в клане </Run>
                    <Run FontSize="14" FontWeight="Bold" x:Name="PlayerClan">___</Run>
            <Run>вот уже </Run>
            <Run FontWeight="Bold" x:Name="PlayerClanDays">__</Run>
            <Run> дней!</Run>
        </TextBlock>
        <Button Content="Премиум" HorizontalAlignment="Right" Margin="0,5,10,6" Width="113" Grid.Column="3" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
        <Button x:Name="credit" Content="Кредитов: 500" Margin="11,7,16,0" VerticalAlignment="Top" Grid.Column="2" Height="22" Grid.Row="2"/>
        <Button x:Name="opit" Content="Свободного опыта: 950" HorizontalAlignment="Right" Margin="0,7,10,0" VerticalAlignment="Top" Width="150" Grid.Column="3" Grid.ColumnSpan="2" Height="22" Grid.Row="2"/>
        <Button x:Name="pobedi" Content="Процент побед: 48,71%" HorizontalAlignment="Left" Margin="10,4,0,0" Grid.Row="4" VerticalAlignment="Top" Width="70" Height="70" UseLayoutRounding="False" TextOptions.TextFormattingMode="Display" FontWeight="Bold"/>
        <Button x:Name="boev" Content="Количество боев 4136" HorizontalAlignment="Left" Margin="10,4,0,0" Grid.Row="4" VerticalAlignment="Top" Width="70" Height="70" FontWeight="Bold" Grid.Column="1"/>
        <Button x:Name="rating" Content="Личный рейтинг 3868" Margin="11,3,16,0" Grid.Row="4" VerticalAlignment="Top" Height="150" FontWeight="Bold" Grid.Column="2"/>
        <Button x:Name="avgopit" Content="Средний опыт за бой 305" HorizontalAlignment="Right" Margin="0,4,7,0" Grid.Row="4" VerticalAlignment="Top" Width="70" Height="70" FontWeight="Bold" Grid.Column="3"/>
        <Button x:Name="avguron" Content="Средний нанесенный урон за бой 452" HorizontalAlignment="Right" Margin="0,4,10,0" Grid.Row="4" VerticalAlignment="Top" Width="70" Height="70" FontWeight="Bold" Grid.Column="4"/>
        <Button Content="Закрыть" HorizontalAlignment="Right" Margin="0,0,10,10" Grid.Row="5" VerticalAlignment="Bottom" Padding="20,5" Click="Button_Click" Grid.Column="3" Grid.ColumnSpan="2" Height="30" Width="89"/>
        <TextBlock HorizontalAlignment="Left" Margin="27,7,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="32" Width="72" Grid.ColumnSpan="2" Grid.Row="2">
            <Run>Золота:</Run>
            <Run x:Name="PlayerGold" FontWeight="Bold">0</Run>
        </TextBlock>
    </Grid>
</Page>
