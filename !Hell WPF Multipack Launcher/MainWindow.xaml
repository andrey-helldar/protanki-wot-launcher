<Window x:Class="_Hell_WPF_Multipack_Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Multipack Launcher" Height="350" Width="525" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Icon="Resources/WOT.ico" WindowStyle="None" Background="#FFD6D6D6">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="44*"/>
            <RowDefinition Height="257*"/>
            <RowDefinition Height="49*"/>
        </Grid.RowDefinitions>
        <Label Content="Multipack Launcher" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Frame x:Name="MainFrame" Margin="0" Grid.Row="1"/>
        <Button x:Name="bPlay" Content="Играть" Grid.Column="1" HorizontalAlignment="Left" Margin="31,17,0,0" Grid.Row="2" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="bSettings" Content="Settings" HorizontalAlignment="Left" Margin="10,17,0,0" Grid.Row="2" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="bFeedback" Content="Feedback" HorizontalAlignment="Left" Margin="95,17,0,0" Grid.Row="2" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="bOptimize" Content="Optimize" HorizontalAlignment="Left" Margin="314,17,0,0" Grid.Row="2" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="bClose" Content="Close" Grid.Column="1" HorizontalAlignment="Left" Margin="79,10,0,0" VerticalAlignment="Top" Width="37" Click="bClose_Click"/>
        <Button x:Name="bMinimize" Content="Minimize" HorizontalAlignment="Left" Margin="398,10,0,0" VerticalAlignment="Top" Width="75" Grid.ColumnSpan="2"/>
        <Button x:Name="bAbout" Content="About" HorizontalAlignment="Left" Margin="356,10,0,0" VerticalAlignment="Top" Width="37"/>
        <Button x:Name="bUpdate" Content="Update" HorizontalAlignment="Left" Margin="314,10,0,0" VerticalAlignment="Top" Width="37"/>

    </Grid>
</Window>
