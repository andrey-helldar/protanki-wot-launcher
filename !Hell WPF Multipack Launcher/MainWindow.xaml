<Window x:Class="_Hell_WPF_Multipack_Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Multipack Launcher" Height="426" Width="654" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Icon="Resources/WOT.ico" WindowStyle="None" Background="#FFD6D6D6" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="44*"/>
            <RowDefinition Height="257*"/>
            <RowDefinition Height="49*"/>
        </Grid.RowDefinitions>
        <Label Content="Multipack Launcher" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Frame x:Name="MainFrame" Margin="0" Grid.Row="1"/>
        <Button x:Name="bPlay" Content="Играть" Grid.Column="1" HorizontalAlignment="Left" Margin="63,17,0,0" Grid.Row="2" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="bSettings" Content="Settings" HorizontalAlignment="Left" Margin="10,17,0,0" Grid.Row="2" VerticalAlignment="Top" Width="35"/>
        <Button x:Name="bFeedback" Content="Feedback" HorizontalAlignment="Left" Margin="49,17,0,0" Grid.Row="2" VerticalAlignment="Top" Width="42"/>
        <Button x:Name="bOptimize" Content="Optimize" Margin="0,17,10,0" Grid.Row="2" VerticalAlignment="Top" HorizontalAlignment="Right" Width="75"/>
        <Button x:Name="bClose" Content="Close" Grid.Column="1" HorizontalAlignment="Left" Margin="79,10,0,0" VerticalAlignment="Top" Width="37" Click="bClose_Click"/>
        <Button x:Name="bMinimize" Content="Minimize" HorizontalAlignment="Left" Margin="398,10,0,0" VerticalAlignment="Top" Width="75" Grid.ColumnSpan="2" Click="bMinimize_Click"/>
        <Button x:Name="bAbout" Content="About" HorizontalAlignment="Left" Margin="356,10,0,0" VerticalAlignment="Top" Width="37"/>
        <Button x:Name="bUpdate" Content="Update" HorizontalAlignment="Left" Margin="314,10,0,0" VerticalAlignment="Top" Width="37"/>
        <Label Content="(c) 2014 AI RUS - Professional IT-support" HorizontalAlignment="Left" Margin="106,10,0,0" Grid.Row="2" VerticalAlignment="Top"/>
        <Label Content="Design by D Jinjolava" HorizontalAlignment="Left" Margin="106,31,0,0" Grid.Row="2" VerticalAlignment="Top"/>
        <Label x:Name="lType" Content="Label" HorizontalAlignment="Left" Margin="129,10,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
