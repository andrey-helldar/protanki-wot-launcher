<Page x:Class="_Hell_WPF_Multipack_Launcher.SettingsOptimize"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="691" d:DesignWidth="463"
	Title="SettingsOptimize" Width="Auto" Height="Auto" Background="#FFAC9595">

    <Grid>
        <ScrollViewer Margin="10">
            <Grid Margin="0" Background="#FFF9EFEF">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <GroupBox VerticalAlignment="Top" Margin="0,5,0,0" Header="Оптимизация ПК и игры:" Grid.Row="1">
                    <Grid Margin="5" Background="LightGray" VerticalAlignment="Top">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="32"/>
                        </Grid.RowDefinitions>
                        <CheckBox x:Name="cbKill" Content="Закрывать процессы при запуске игры" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Height="16" Width="232" Click="cbKill_Click"/>
                        <CheckBox x:Name="cbForce" Content="Принудительно закрывать процессы" HorizontalAlignment="Left" Margin="30,5,0,0" VerticalAlignment="Top" Grid.Row="1" Height="16" Width="220" Click="cbForce_Click"/>
                        <CheckBox x:Name="cbVideo" Content="Уменьшить качество графики в игре" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Grid.Row="2" Height="16" Width="218" Click="cbVideo_Click"/>
                        <CheckBox x:Name="cbAero" Content="Отключать Windows Aero" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Grid.Row="4" Height="16" Width="157" Click="cbAero_Click"/>
                        <CheckBox x:Name="cbWeak" Content="Очень слабый компьютер" HorizontalAlignment="Left" Margin="30,5,0,0" VerticalAlignment="Top" Grid.Row="3" Height="16" Width="161" Click="cbWeak_Click"/>
                        <ComboBox x:Name="cbPriority" VerticalAlignment="Top" Margin="10,5,10,0" SelectedIndex="0" Grid.Row="5" Height="22">
                            <ComboBoxItem Content="---"/>
                        </ComboBox>
                    </Grid>
                </GroupBox>


                <GroupBox VerticalAlignment="Top" Margin="0,5" Header="Другое:" Grid.Row="2">
                    <Grid Margin="5" Background="#FFBFAEAE">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <CheckBox x:Name="cbNotifyVideo" Content="Уведомлять о новых видео" Margin="10,5,0,4" Click="cbNotifyVideo_Click" IsChecked="True"/>
                        <CheckBox x:Name="cbNotifyNews" Content="Уведомлять о новых новостях" Margin="10,6,0,3" Grid.Row="1" Click="cbNotifyNews_Click" IsChecked="True"/>
                        <ComboBox x:Name="cbLauncher" VerticalAlignment="Top" Margin="10" SelectedIndex="0" Grid.Row="2" SelectionChanged="cbLauncher_SelectionChanged">
                            <ComboBoxItem Content="---"/>
                        </ComboBox>
                    </Grid>
                </GroupBox>

                <GroupBox Header="Игровой ник:" Margin="0,5" VerticalAlignment="Top">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBox x:Name="tbPlayerName" TextWrapping="Wrap" VerticalAlignment="Center" Margin="5,7,5,5" TextChanged="tbPlayerName_TextChanged"/>
                        <Button Content="Найти" Grid.Column="1" HorizontalAlignment="Right" Margin="0,5,5,0" VerticalAlignment="Top" Padding="10,1" Click="Button_Click"/>
                        <GroupBox Header="Найдите свой ник в списке:" Margin="10,0,10,5" Grid.Row="1" Grid.ColumnSpan="2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="221*"/>
                                    <ColumnDefinition Width="161*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Margin="5" VerticalAlignment="Center">
                                    <Run>Найдено совпадений:</Run>
                                    <Run x:Name="RunCount" FontWeight="Bold">0</Run>
                                </TextBlock>
                                <ListBox x:Name="lbResult" Margin="10,0,10,5" MinHeight="100" Grid.Row="1" MaxHeight="300" Grid.ColumnSpan="2"  />
                                <Button Content="Применить ник" HorizontalAlignment="Center" Margin="0,5" Grid.Row="2" VerticalAlignment="Top" Padding="10,1" Grid.ColumnSpan="2"/>
                                <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="5,5,0,5" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Center">
                                    <Run>Выбран ID:</Run>
                                    <Run x:Name="SelectID" FontWeight="Bold">0</Run>
                                </TextBlock>
                            </Grid>
                        </GroupBox>
                    </Grid>

                </GroupBox>
            </Grid>
        </ScrollViewer>

    </Grid>
</Page>
