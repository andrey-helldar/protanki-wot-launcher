        <Style TargetType="{x:Type TabControl}">
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabControl}">
                        <Grid KeyboardNavigation.TabNavigation="Local">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TabPanel Name="HeaderPanel" Grid.Row="2" Panel.ZIndex="1" IsItemsHost="True" 
                                              KeyboardNavigation.TabIndex="1" HorizontalAlignment="Center" />
                            <Border Name="Border" Grid.Row="0" BorderThickness="0"
                                            KeyboardNavigation.TabNavigation="Local" KeyboardNavigation.DirectionalNavigation="Contained" KeyboardNavigation.TabIndex="1" >
                                <ContentPresenter Name="PART_SelectedContentHost" Margin="0" ContentSource="SelectedContent" />
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- SimpleStyles: TabItem -->
        <Style TargetType="{x:Type TabItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <StackPanel HorizontalAlignment="Center" Margin="0">
                            <Grid HorizontalAlignment="Center" Margin="5">
                                <Border Name="Border" Margin="5,0" Cursor="Hand" BorderThickness="0">
                                    <Grid Margin="0">
                                        <Rectangle x:Name="cbImage12"
                                                Width="8"
                                                Height="8"
                                                Stretch="Fill"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center">
                                            <Rectangle.Fill>
                                                <ImageBrush ImageSource="Resources/page_select.png"/>
                                            </Rectangle.Fill>
                                        </Rectangle>
                                    </Grid>
                                </Border>
                            </Grid>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter Property="Rectangle.Fill" TargetName="cbImage12">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="Resources/page.png"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Rectangle.Fill" TargetName="cbImage12">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="Resources/page.png"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True" />
                                    <Condition Property="IsSelected" Value="False" />
                                    <Condition Property="IsEnabled" Value="True" />
                                </MultiTrigger.Conditions>
                                <MultiTrigger.Setters>
                                    <Setter Property="Rectangle.Fill" TargetName="cbImage12">
                                        <Setter.Value>
                                            <ImageBrush ImageSource="Resources/page_select.png"/>
                                        </Setter.Value>
                                    </Setter>
                                </MultiTrigger.Setters>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



