                            <Rectangle x:Name="innerRectangle" 
                                HorizontalAlignment="Stretch" 
                                VerticalAlignment="Stretch" Stroke="Transparent" 
                                StrokeThickness="0" 
                                Fill="{TemplateBinding Background}"
                                       Cursor="{TemplateBinding Cursor}"/>

